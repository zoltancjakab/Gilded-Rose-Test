@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row d-flex flex-row flex-grow-1 align-items-center mt-5 mb-5">
    <div class="col-sm-6 col-12 offset-sm-3">
        <div class="card rounded-0 shadow" style="border-bottom: 4px solid #dcc970; border-top:4px solid #dcc970;">
            <div class="card-body text-center">

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <h5>Creating an account lets you purchase our products.</h5>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger text-left"></div>
                    <div class="form-group text-left">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                        <button type="submit" class="btn btn-success rounded-0">Register</button>
                    
                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
