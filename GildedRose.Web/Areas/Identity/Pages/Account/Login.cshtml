@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row d-flex flex-row flex-grow-1 align-items-center mt-5 mb-5">
    <div class="col-xl-6 col-12 offset-xl-3">
        <div class="card rounded-0 shadow" style="border-bottom: 4px solid #dcc970; border-top:4px solid #dcc970;">
            <div class="card-body text-center">

                <form id="account" method="post">
                    <h4>Log in with your Email</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger text-left"></div>
                    <div class="form-group text-left">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
